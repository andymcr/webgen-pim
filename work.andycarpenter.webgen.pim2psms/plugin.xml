<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="work.andycarpenter.webgen.pim2psms">
         <iterate
               ifEmpty="false"
               operator="and">
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="website">
               </test>
            </and>
         </iterate>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="work.andycarpenter.webgen.pim2psms.transformation"
               label="Generate WAF and ORM PSMs"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <reference
                        definitionId="work.andycarpenter.webgen.pim2psms">
                  </reference>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Transform website model to ORM and WAF models"
            id="work.andycarpenter.webgen.pim2psms.transformation"
            name="transform">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="work.andycarpenter.webgen.pim2psms.TransformationHandler"
            commandId="work.andycarpenter.webgen.pim2psms.transformation">
      </handler>
   </extension>

</plugin>
